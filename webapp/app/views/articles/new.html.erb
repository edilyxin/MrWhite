<h1>创建新文章</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @article, html:{multipart:true} do |f| %>
        <div class="form-group">
          <%= f.label :title, '标题' %>
          <%= f.text_field :title, class: 'form-control', placeholder: '请输入文章标题' %>
        </div>
        <div class="form-group">
          <%= f.label :description, '描述' %>
          <%= f.text_area :description, class: 'form-control', placeholder: '请输入文章描述' %>
        </div>
        <div class="form-group">
          <%= f.label :image, '文章图片' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :content, '文章内容' %>
          <%= f.text_area :content, class: 'tinymce', rows: 40, cols: 120 %>
          <%= tinymce %>
        </div>
        <%= f.submit "创建", class: 'btn btn-lg btn-primary' %>
    <% end %>
  </div>
</div>
