<div class="row">
<tr>
	<td><%= comment_item_counter+1 %></td>
	<td><%= comment_item.store.name %></td>
	<td><%= comment_item.user.name %></td>
	<td><%= comment_item.content %></td>
	<td><%= comment_item.created_at.strftime("%Y-%m-%d %H:%M") %></td>
	<td><%= comment_item.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
	<td>
		<%= link_to '删除', comment_path(comment_item), method: :delete, data: { confirm: "确定删除吗？" } %>
	</td>
</tr>
</div>
